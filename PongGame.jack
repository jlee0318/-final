class PongGame {
    static PongGame instance;
    field Bat bat1;
    field Bat bat2;
    field Ball ball;
    field int wall;
    field boolean exit;
    field int score1, score2;
    field int lastWall;
    field int batWidth;
    field int batheight;

    constructor PongGame new() {
        do Screen.clearScreen();

        let batWidth = 7;
        let batheight = 50;
        let bat1 = Bat.new(0, 0, batWidth, batheight);
        let bat2 = Bat.new(504, 0, batWidth, batheight);
        let ball = Ball.new(256, 128);

        do Output.moveCursor(22,0);
        do Output.printString("Score: 0");
        
        let exit = false;
        let score1 = 0;
        let score2 = 0;
        let wall = 0;
        let lastWall = 0;

        return this;
    }

    method void dispose() {
        do bat.dispose();
        do Memory.deAlloc(this);
        return;
    }

    function void newInstance() {
        let instance = PongGame.new();
        return;
    }
    
    function PongGame getInstance() {
        return instance;
    }

    method void run() {
        var char key;

        while (~exit) {
            do ball.draw();
            while ((key = 0) & ~(exit)){
                let key = Keyboard.keyPressed();
                do bat1.move();
                do bat2.move();
            }

            if (key = 131) {
	            do bat1.setDirection(1);
            }
            else{
                if (key = 133){
                    do bat1.setDirection(2);
                }
                else{
                    if (key = 132){
                        do bat2.setDirection(1);
                    }
                    else{
                        if (key = 130){
                            do bat2.setDirection(2);
                        }
                        else{
                            if (key = 140){
                                let exit = true;
                            }
                        }
                    }
                }
            }

            while ((~(key = 0)) & (~exit)) {
                let key = Keyboard.keyPressed();
                do bat1.move();
                do bat2.move();
            }

        }

	    if (exit) {
    	    do Output.moveCursor(10,27);
	        do Output.printString("Game Over");
	    }
            
        return;
    }
}